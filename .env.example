# ZowTiCheck Configuration
# Copy this to .env and adjust values

# Application Settings
APP_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=5000

# Security Settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
SECRET_KEY=your-secret-key-here-change-this

# Timeouts (seconds)
REQUEST_TIMEOUT=10
PING_TIMEOUT=5
PAGESPEED_TIMEOUT=30

# PageSpeed API
PAGESPEED_API_KEY=your-google-api-key-here
PAGESPEED_STRATEGY=desktop

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/zowticheck.log

# Security Headers
SECURITY_HEADERS_STRICT=false
VALIDATE_SSL=true

# Database (future use)
DATABASE_URL=sqlite:///zowticheck.db